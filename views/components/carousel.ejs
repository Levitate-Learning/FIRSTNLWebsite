<div id="<%=id%>" class="carousel carousel-dark slide" data-bs-touch="true">
    <div class="carousel-indicators">
        <%pages.forEach((page, i) => {%>
            <button type="button" data-bs-target="#<%=id%>" data-bs-slide-to="<%=i%>" <%= i == 0 ? `class=active aria-current=true` : '' %> aria-label="Slide <%=i+1%>"></button>
        <%});%>
    </div>
    <div class="carousel-inner">
        <%pages.forEach((page,i) => {%>
        <div class="carousel-item <%= i== 0 ? 'active' : ''%>">
            <img <%-IMAGE(page.image)%> class="d-block w-100"/>
            <div class="carousel-caption d-block" style="background-color: rgba(255,255,255,0.8);">
                <h5><%=page.title%></h5>
                <p><%=page.text%></p>
            </div>
        </div>
        <%});%>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#<%=id%>" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color: rgba(255,255,255,0.4);"></span>
        <span class="visually-hidden">Previous</span>
      </button>
    <button class="carousel-control-next fw-bold" type="button" data-bs-target="#<%=id%>" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true" style="background-color: rgba(255,255,255,0.4);"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>